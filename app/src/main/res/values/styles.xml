<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSecondary" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextViews -->

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
    </style>

    <!-- EditTexts -->

    <style name="AlphaEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:textSize">@dimen/font16</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:background">@color/none</item>
    </style>

    <!-- TextInputLayouts -->

    <style name="OutlinedTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Buttons -->

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font12</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/padding16</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">@dimen/margin32</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_main_selector</item>
    </style>

</resources>
