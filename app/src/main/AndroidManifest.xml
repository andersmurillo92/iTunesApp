<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.janders.itunesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".iTunesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.login.LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".views.splash.SplashActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.splash.SplashActivity" />
        </activity>
        <activity
            android:name=".views.favorites.FavoriteActivity"
            android:label="@string/title_activity_favorites"
            android:theme="@style/AppThemeSecondary"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".views.search.SearchSongsActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppThemeSecondary"
            android:parentActivityName=".views.favorites.FavoriteActivity"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.favorites.FavoriteActivity" />
        </activity>
        <activity
            android:name=".views.detail.SongDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>